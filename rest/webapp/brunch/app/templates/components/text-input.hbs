<label {{bind-attr for=view.inputId}}>{{view.label}}</label>
{{input idBinding="view.inputId"
        class="form-control"
        typeBinding="view.type"
        class="form-control"
        placeholderBinding="view.placeholder"
        valueBinding="view.value"}}
{{#if view.showError}}
  <span class="help-block">
    {{#each error in view.errors}}{{error}}{{/each}}
  </span>
{{/if}}